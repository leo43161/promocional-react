# --- .htaccess para /reactdev/ ---

# Activa el motor de reescritura
RewriteEngine On

# Establece la base para las reglas de reescritura en esta carpeta
# IMPORTANTE: Aseg煤rate que la ruta sea correcta y termine con /
RewriteBase /reactdev/

# --- Regla específica para /articulos/ID ---
# Intenta servir directamente el archivo 56.html si existe para la ruta /articulos/56
RewriteCond %{REQUEST_URI} ^/reactdev/articulos/([0-9]+)/?$
RewriteCond %{DOCUMENT_ROOT}/reactdev/articulos/$1.html -f [NC]
RewriteRule ^articulos/([0-9]+)/?$ articulos/$1.html [L]

# --- Reglas generales (sin cambios respecto a tu versión) ---
RewriteCond %{THE_REQUEST} \s/+(reactdev/.+?)\.html[\s?] [NC]
RewriteRule ^(.+?)\.html$ %1 [R=301,L,NE]

RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME}\.html -f
RewriteRule ^(.*?)/?$ $1.html [L]